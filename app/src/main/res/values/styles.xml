<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light"><!--parent="Theme.AppCompat.Light.DarkActionBar"-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageButtonGame">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:clickable">true</item>
        <item name = "android:padding">6dp</item>
        <item name = "android:background">@android:color/transparent</item>
        <item name = "android:src">@drawable/image_button_game</item><!--le doy una apariencia personal al boton, no se crea como esta predefinido por android-->
    </style>

    <style name="ImageButtonGameLand">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
        <item name = "android:clickable">true</item>
        <item name = "android:padding">6dp</item>
        <item name = "android:background">@android:color/transparent</item>
        <item name = "android:src">@drawable/image_button_game_land</item><!--le doy una apariencia personal al boton, no se crea como esta predefinido por android-->
    </style>
</resources>
